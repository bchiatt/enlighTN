#location
  .col-xs-6.left-column
    h2.loc-title {{title}}
    ul.interact-btns
      li: a#favorite(href='javascript:void(0)', ng-click='favorite()'): i.fa.fa-fw(ng-class='{\'fa-heart\': fav === true, \'fa-heart-o\': fav === false}')
      li: a#comment(href='javascript:void(0)', ng-click='open(\'lg\')'): i.fa.fa-fw.fa-comment
    #info
      h3 {{loc.address}}
    #description
      p {{loc.description}}
  .col-xs-6.events
      h2 Events
      #events-list
        ul
          li: a(href='/#/events/{{event._id}}', ng-repeat='event in occasions') {{event.name}}
  .row
    #slides_control
      div
        carousel.carousel(interval='myInterval')
          slide.slide(ng-repeat='slide in slides')
            .reflection(ng-repeat='reflect in slide')
              img.reflection-badge(src='{{reflect.img}}')
              p.text-center {{reflect.user}}
              h3 {{reflect.title}}
              .think
                p {{reflect.body}}
              .vote
                a(href='javascript:void(0)', ng-click='castVote(reflect._id)'): i.fa.fa-fw.fa-5x(ng-class='{\'fa-star\': vote === true, \'fa-star-o\': vote === false}')
